{
  "extends": "./tsconfig.paths.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "pretty": true,
    "checkJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "name": "typescript-styled-plugin"
    }
  ]
}
